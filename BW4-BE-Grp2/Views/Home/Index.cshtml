@model List<Categoria>


@{
    ViewData["Title"] = "EpiTech - Home";

    var prodotti = ViewBag.Prodotti as List<Prodotto>;
}








<div>
    <h1 class="text-center my-3" style="font-weight: 700; color: #1B3A2A; font-size: 80px;">Benvenuti su EpiTech</h1>
    <p class="text-center mb-3" style="font-size: 1.2rem; color: #555;">La tua destinazione per tecnologia ricondizionata di alta qualità</p>
</div>

<!-- Categories Section -->
<div class="ContainerFluid py-4">
    <div class="Row justify-content-center">
        <div class="Col-12">
            <div class="CarouselContainer">
                <div class="CarouselTrack">
                    @{
                        var allCategories = Model.ToList();
                    }

                    @for (int i = 0; i < 2; i++)
                    {
                        <button class="CarouselItem">
                            <img src="https://help.apple.com/assets/665F9C26873A6ED7440C41D7/665F9C27873A6ED7440C41DD/en_US/b2a01456b47f9c24a30087980101be2c.png">
                            <span>Tutti i prodotti</span>
                        </button>

                        @foreach (var category in allCategories)
                        {
                            <a class="btn CarouselItem" asp-controller="Prodotti" asp-action="Category" asp-route-c="@category.IdCategoria" asp-route-cat="@category.NomeCategoria">
                                <img src="@category.ImmagineCategoria" alt="@category.NomeCategoria">
                                <span>@category.NomeCategoria</span>
								</a>
							
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>




