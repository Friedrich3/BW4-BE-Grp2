@model List<Prodotto>

@{
    ViewData["Title"] = "EpiTech - Prodotti";
    List<Categoria> Categorie = ViewBag.Categorie;
}

<div>
    <h2 class="fw-bold">I Nostri Prodotti:</h2>
    <p class="fw-bold opacity-75">Tutti prodotti di alta qualità al miglior prezzo. Elettronica ricondizionata con min. 12 mesi di garanzia.</p>
</div>
<div>
    <h4>Le nostre Categorie</h4>
    <ul class="d-flex list-unstyled justify-content-between">
    @foreach(var item in Categorie)
    {
        <li>
            <img src="@item.ImmagineCategoria" width="30" height="30" />
            <a class="text-black " asp-controller="Prodotti" asp-action="Category" asp-route-c="@item.IdCategoria" asp-route-cat="@item.NomeCategoria">@item.NomeCategoria</a>
        </li>
    }
</ul>
</div>
<hr />

<div class="container">
    <h5>Prodotti Epitech con min. 12 mesi di garanzia</h5>
    <p>
		<svg aria-hidden="true" fill="none" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" style="width:30px">
			<path d="M17.25 23.25a6 6 0 1 0 0-12 6 6 0 0 0 0 12z" stroke="#5984E7" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
			<path d="m19.924 15.505-2.905 3.874a.75.75 0 0 1-1.131.08l-1.5-1.5" stroke="#5984E7" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
			<path d="M8.25 18.75h-6a1.5 1.5 0 0 1-1.5-1.5V6.75a1.5 1.5 0 0 1 1.5-1.5h15a1.5 1.5 0 0 1 1.5 1.5v1.5" stroke="#4B5492" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
			<path d="m18.266 5.647-2.821-4.229A1.5 1.5 0 0 0 14.2.75H5.3a1.5 1.5 0 0 0-1.248.668L1.234 5.647M9.75.75v4.5" stroke="#4B5492" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
		</svg>
    <span class="fw-bold text-black">Spedizione inclusa</span>
    </p>

    <div class="row">
        @* TODO inserire controlli NULL *@
        @foreach (var product in Model)
        {
            <div class="col-6 col-md-4 col-lg-3 mb-4">
                <div class="card h-100 border-0 shadow-sm">
                    <a asp-controller="Dettaglio" asp-action="Index" asp-route-id="@product.IdProdotto"><img src="@product.Immagine" class="card-img-top" alt="@product.Nome" style="height: 150px; object-fit: contain;"></a>
                    <div class="card-body p-3">
                        <a asp-controller="Dettaglio" asp-action="Index" asp-route-id="@product.IdProdotto" class="card-title h6 fw-bold mb-1 custom-card-detail">@product.Nome</a>
                        <a asp-controller="Dettaglio" asp-action="Index" asp-route-id="@product.IdProdotto"><p class="card-text fw-bold mb-2" style="color: #1B3A2A;">€ @product.Prezzo.ToString("N2")</p></a>
                    </div>
                    <form asp-controller="Carrello" asp-action="AggiungiAlCarrello" method="post" asp-route-id="@product.IdProdotto" asp-route-number="1">
                        <input type="hidden" name="idProdotto" value="@product.IdProdotto" />
                        <button type="submit" class="btn BtnCustomHome CategoryBtn btn-sm w-100">Acquista Ora</button>
                    </form>
                </div>
            </div>
        }
    </div>
</div>


