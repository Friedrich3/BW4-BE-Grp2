<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BW4_BE_Grp2</title>
    <link href="https://fonts.googleapis.com/css2?family=Readex+Pro:wght@200;300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BW4_BE_Grp2.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand custom-nav-color" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/IconaBw4.png" width="50px" class="rounded-circle" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between ">
                    <ul class="navbar-nav flex-grow-1 align-content-center">
                        <li class="nav-item d-flex align-items-center">
                            <a class="nav-link custom-nav-color" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item d-flex align-items-center">
                            <a class="nav-link custom-nav-color" asp-area="" asp-controller="Admin" asp-action="Index">Administration</a>
                        </li>
                        <li class="nav-item ms-auto">
                            <div class="d-flex">
                                <a class="nav-link mx-2" asp-controller="Admin" asp-action="Index"><i class="bi bi-person-circle fs-4 custom-nav-color"></i></a>
                                <a class="nav-link mx-3" asp-controller="Carrello" asp-action="Index"><i class="bi bi-cart2 fs-4 custom-nav-color"></i></a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-auto">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <h5>AZIENDA</h5>
                    <ul class="list-unstyled">
                        <li><a href="#">I tuoi vantaggi</a></li>
                        <li><a href="#">I processi di ricondizionamento</a></li>
                        <li><a href="#">Sostenibilità</a></li>
                        <li><a href="#">Chi siamo</a></li>
                        <li><a href="#">Lavora con noi</a></li>
                        <li><a href="#">Blog</a></li>
                        <li><a href="#">Stampa</a></li>
                        <li><a href="#"><i class="bi bi-arrow-return-right"></i> Engineering</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h5>ASSISTENZA RAPIDA</h5>
                    <ul class="list-unstyled">
                        <li><a href="#">Domande frequenti</a></li>
                        <li><a href="#">Condizione dei prodotti</a></li>
                        <li><a href="#">Restituzione prodotti</a></li>
                        <li><a href="#">Condizioni di garanzia</a></li>
                        <li><a href="#">Contatti</a></li>
                        <li><a href="#">Diventa venditore su refurbed</a></li>
                    </ul>
                    <h5>ASSISTENZA TELEFONICA GRATUITA</h5>
                    <p>800 - 72 74 81<br>Lun - Ven 09.00 - 17.00</p>
                </div>
                <div class="col-md-3">
                    <h5>REFURBED IN</h5>
                    <select class="form-select mb-3">
                        <option>Italiano</option>
                        <option>English</option>
                    </select>
                    <h5>SCARICA L'APP DI REFURBED</h5>
                    <div>
                        <p><i class="bi bi-google-play"></i> Google Play</p>
                        <p><i class="bi bi-apple"></i> App Store</p>
                    </div>
                </div>
                <div class="col-md-3">
                    <h5>METODI DI PAGAMENTO</h5>
                    <div class="payment-icons">
                        <p><i class="bi bi-credit-card"></i> Visa</p>
                        <p><i class="bi bi-credit-card"></i> Mastercard</p>
                        <p><i class="bi bi-credit-card"></i> Postepay</p>
                        <p><i class="bi bi-paypal"></i> PayPal</p>
                        <p><i class="bi bi-wallet"></i> Apple Pay</p>
                        <p><i class="bi bi-wallet"></i> Google Pay</p>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <div class="footer-bottom">
        <p>&copy; Refurbed Marketplace GmbH | <a href="#">Condizioni generali</a> | <a href="#">Normativa sulla privacy</a> | <a href="#">Informazioni legali</a> | <a href="#">Legal Notices</a> | <a href="#">Cookie Policy</a></p>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
