@model List<BW4_BE_Grp2.Models.Prodotto>
@{
    ViewData["Title"] = "Apple Collection";
}

<div class="apple-container">
    <header class="apple-header">
        <h1>Apple Collection</h1>
        <p>Scopri l'innovazione in ogni dettaglio</p>
    </header>

    <section class="product-grid">
        <div class="container">
            <h2>Prodotti Apple Ricondizionati</h2>
            <div class="row">
                @foreach (var product in Model)
                {
                    <div class="col-md-4 mb-4">
                        <div class="product-card">
                            <div class="product-image">
                                <img src="@product.Immagine" alt="@product.Nome">
                            </div>
                            <div class="product-info">
                                <h3 class="text-center product-name">@product.Nome</h3>
                                <p class="price">€@product.Prezzo.ToString("N2")</p>
                                <a href="@Url.Action("Details", "Dettaglio", new { id = product.IdProdotto })" class="btn btn-apple">Scopri di più</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

    <section class="apple-features">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <div class="feature-item">
                        <i class="fas fa-check-circle"></i>
                        <h3>Qualità Certificata</h3>
                        <p>Ogni prodotto è accuratamente testato</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-item">
                        <i class="fas fa-leaf"></i>
                        <h3>Eco-Friendly</h3>
                        <p>Supporta il nostro impegno per l'ambiente</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-item">
                        <i class="fas fa-sync"></i>
                        <h3>Garanzia Apple</h3>
                        <p>1 anno di garanzia su tutti i prodotti</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<style>
    .apple-container {
        font-family: 'SF Pro Text', 'SF Pro Icons', 'Helvetica Neue', 'Helvetica', 'Arial', sans-serif;
        color: #1d1d1f;
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    .apple-header {
        background-color: #fbfbfd;
        text-align: center;
        padding: 40px 0;
        border-radius: 30px;
    }

        .apple-header h1 {
            font-size: 60px;
            font-weight: 600;
            letter-spacing: -0.005em;
        }

        .apple-header p {
            font-size: 20px;
            font-weight: 400;
            letter-spacing: .004em;
            color: #86868b;
        }

    .product-grid {
        padding: 80px 0;
        background-color: #fff;
    }

        .product-grid h2 {
            font-size: 40px;
            font-weight: 600;
            text-align: center;
            margin-bottom: 50px;
        }

    .product-card {
        background-color: #fbfbfd;
        border-radius: 18px;
        overflow: hidden;
        transition: all 0.3s ease;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }

        .product-card:hover {
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
            transform: translateY(-5px);
        }

    .product-image {
        height: 200px;
        object-fit: contain;
        width: 100%;
        padding: 20px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .product-image img {
            max-height: 100%;
            max-width: 100%;
        }

    .product-name {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: 100%;
        display: block;
        font-size: 1.1rem;
        margin-bottom: 10px;
    }

    .product-info {
        padding: 20px;
        text-align: center;
    }

        .product-info h3 {
            font-size: 24px;
            font-weight: 600;
            margin-bottom: 10px;
        }

    .price {
        font-size: 18px;
        color: #86868b;
        margin-bottom: 20px;
    }

    .btn-apple {
        background-color: #b8dbfd;
        color: white;
        border: none;
        padding: 12px 24px;
        border-radius: 980px;
        font-size: 17px;
        font-weight: 400;
        transition: all 0.3s ease;
    }

        .btn-apple:hover {
            color: white;
            text-decoration-line: none;
            background-color: #0077ed;
        }

    .apple-features {
        background-color: #f5f5f7;
        padding: 80px 0;
        border-radius: 30px;
    }

    .feature-item {
        text-align: center;
        padding: 0 20px;
    }

        .feature-item i {
            font-size: 48px;
            color: #0071e3;
            margin-bottom: 20px;
        }

        .feature-item h3 {
            font-size: 24px;
            font-weight: 600;
            margin-bottom: 10px;
        }

        .feature-item p {
            font-size: 17px;
            color: #86868b;
        }
</style>