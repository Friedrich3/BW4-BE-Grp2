@model List<BW4_BE_Grp2.Models.Prodotto>
@{
    ViewData["Title"] = "Apple Collection";
}

<div class="apple-container">
    <header class="apple-header">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" width="40" height="40">
            <symbol xmlns="http://www.w3.org/2000/svg" id="a" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10.996 1.74C12.31.008 14.137 0 14.137 0s.272 1.628-1.034 3.197c-1.393 1.675-2.978 1.4-2.978 1.4s-.297-1.316.871-2.857m-.704 3.999c.676 0 1.93-.93 3.564-.93 2.811 0 3.917 2 3.917 2S15.61 7.917 15.61 10.6c0 3.027 2.695 4.07 2.695 4.07s-1.884 5.302-4.428 5.302c-1.168 0-2.077-.788-3.308-.788-1.255 0-2.5.817-3.31.817C4.934 20 2 14.971 2 10.929 2 6.95 4.484 4.865 6.814 4.865c1.515 0 2.69.874 3.478.874" />
            </symbol><use href="#a" />
            </svg>
        <h1>Apple Collection</h1>
        <p>Scopri l'innovazione in ogni dettaglio</p>
    </header>

    <section class="product-grid">
        <div class="container">
            <h2>Prodotti Apple Ricondizionati</h2>
            <div class="row">
                @foreach (var product in Model)
                {
                    <div class="col-md-4 mb-4">
                        <div class="product-card">
                            <div class="product-image">
                                <a asp-controller="Dettaglio" asp-action="Index" asp-route-id="@product.IdProdotto">
                                    <img src="@product.Immagine" alt="@product.Nome">
                                </a>
                            </div>
                            <div class="product-info">
                                <h3 class="text-center product-name">@product.Nome</h3>
                                <p class="price">€@product.Prezzo.ToString("N2")</p>
                                <form asp-controller="Carrello" asp-action="AggiungiAlCarrello" method="post" asp-route-id="@product.IdProdotto" asp-route-number="1">
                                    <input type="hidden" name="idProdotto" value="@product.IdProdotto" />
                                    <button type="submit" class="btn btn-apple">Aggiungi al Carrello</button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

    <section class="apple-features">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <div class="feature-item">
                        <i class="fas fa-check-circle"></i>
                        <h3>Qualità Certificata</h3>
                        <p>Ogni prodotto è accuratamente testato</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-item">
                        <i class="fas fa-leaf"></i>
                        <h3>Eco-Friendly</h3>
                        <p>Supporta il nostro impegno per l'ambiente</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-item">
                        <i class="fas fa-sync"></i>
                        <h3>Garanzia Apple</h3>
                        <p>1 anno di garanzia su tutti i prodotti</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<style>
    .apple-container {
        font-family: 'SF Pro Text', 'SF Pro Icons', 'Helvetica Neue', 'Helvetica', 'Arial', sans-serif;
        color: #1d1d1f;
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    .apple-header {
        background-color: #fbfbfd;
        text-align: center;
        padding: 40px 0;
        border-radius: 30px;
    }

        .apple-header h1 {
            font-size: 60px;
            font-weight: 600;
            letter-spacing: -0.005em;
        }

        .apple-header p {
            font-size: 20px;
            font-weight: 400;
            letter-spacing: .004em;
            color: #86868b;
        }

    .product-grid {
        padding: 80px 0;
        background-color: #fff;
    }

        .product-grid h2 {
            font-size: 40px;
            font-weight: 600;
            text-align: center;
            margin-bottom: 50px;
        }

    .product-card {
        background-color: #fbfbfd;
        border-radius: 18px;
        overflow: hidden;
        transition: all 0.3s ease;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        display: flex;
        flex-direction: column;
        height: 100%;
    }

        .product-card:hover {
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
            transform: translateY(-5px);
        }

    .product-image {
        height: 200px;
        width: 100%;
        padding: 20px;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
    }

        .product-image img {
            max-height: 160px;
            max-width: 160px;
            object-fit: contain;
        }

    .product-name {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        max-width: 100%;
        display: block;
        font-size: 1.1rem;
        margin-bottom: 10px;
    }

    .product-info {
        padding: 20px;
        text-align: center;
    }

        .product-info h3 {
            font-size: 24px;
            font-weight: 600;
            margin-bottom: 10px;
        }

    .price {
        font-size: 18px;
        color: #86868b;
        margin-bottom: 20px;
    }

    .btn-apple {
        background-color: #b8dbfd;
        color: white;
        border: none;
        padding: 12px 24px;
        border-radius: 980px;
        font-size: 17px;
        font-weight: 400;
        transition: all 0.3s ease;
    }

        .btn-apple:hover {
            color: white;
            text-decoration-line: none;
            background-color: #0077ed;
        }

    .apple-features {
        background-color: #f5f5f7;
        padding: 80px 0;
        border-radius: 30px;
    }

    .feature-item {
        text-align: center;
        padding: 0 20px;
    }

        .feature-item i {
            font-size: 48px;
            color: #0071e3;
            margin-bottom: 20px;
        }

        .feature-item h3 {
            font-size: 24px;
            font-weight: 600;
            margin-bottom: 10px;
        }

        .feature-item p {
            font-size: 17px;
            color: #86868b;
        }
</style>