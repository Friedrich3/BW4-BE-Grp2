@model List<Prodotto>

@{
    ViewData["Title"] = "EpiTech - Prodotti";
    List<Categoria> Categorie = ViewBag.Categorie;
}

<nav aria-label="breadcrumb" class="bg-light py-2 rounded mb-4 shadow-sm">
    <ol class="breadcrumb fw-bold mb-0 px-3">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" class="text-primary opacity-75">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Prodotti</li>
    </ol>
</nav>

<div class="container-fluid p-0" style="margin-top: 0;">
    <div class="container-fluid" style="background-image: url(https://files.refurbed.com/hp/homepage/hp_banner_lg.webp); background-size: cover; background-position: center; background-repeat: no-repeat;width: 100vw; position: relative; left: 50%; right: 50%; margin-left: -50.5vw; margin-right: auto;">
        <div class="container">
            <h1 class="text-center" style="font-weight: 700; color: #f8f8f8; font-size: 80px;">I Nostri Prodotti</h1>
            <p class="text-center mb-3" style="font-size: 1.2rem; color: #ffff;">Tutti i prodotti di alta qualità al miglior prezzo. Elettronica ricondizionata con un minimo di 12 mesi di garanzia.</p>
        </div>

        <div class="container py-4">
            <div class="row justify-content-center">
                <div class="col-12">
                    <div class="CarouselContainer">
                        <div class="CarouselTrack">
                            @{
                                var allCategories = Categorie.ToList();
                            }

                          

                                @foreach (var category in allCategories)
                                {
                                    <a class="btn CarouselItem" asp-controller="Prodotti" asp-action="Category" asp-route-c="@category.IdCategoria" asp-route-cat="@category.NomeCategoria">
                                        <img src="@category.ImmagineCategoria" alt="@category.NomeCategoria" style="width: 60px; height: 60px; object-fit: cover;">
                                        <span>@category.NomeCategoria</span>
                                    </a>
                                }
                            }
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


<div class="container py-4">
    <hr />
    <div class="text-center mb-4">
        <h5 class="fw-bold">Prodotti Epitech con min. 12 mesi di garanzia</h5>
        <p>
            <svg aria-hidden="true" fill="none" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" style="width:30px" class="text-primary">
                <path d="M17.25 23.25a6 6 0 1 0 0-12 6 6 0 0 0 0 12z" stroke="#008000" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                <path d="m19.924 15.505-2.905 3.874a.75.75 0 0 1-1.131.08l-1.5-1.5" stroke="#008000" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                <path d="M8.25 18.75h-6a1.5 1.5 0 0 1-1.5-1.5V6.75a1.5 1.5 0 0 1 1.5-1.5h15a1.5 1.5 0 0 1 1.5 1.5v1.5" stroke="#008000" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                <path d="m18.266 5.647-2.821-4.229A1.5 1.5 0 0 0 14.2.75H5.3a1.5 1.5 0 0 0-1.248.668L1.234 5.647M9.75.75v4.5" stroke="#008000" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
            </svg>
            <span class="fw-bold text-black">Spedizione inclusa</span>
        </p>
    </div>

    <div class="container py-4">
        <div class="row justify-content-center">
            @* TODO inserire controlli NULL *@
            @foreach (var product in Model)
            {
                <div class="col-6 col-md-4 col-lg-3 mb-4">
                    <div class="card h-100 border-0 shadow-sm rounded-3">
                        <a asp-controller="Dettaglio" asp-action="Index" asp-route-id="@product.IdProdotto">
                            <img src="@product.Immagine" class="card-img-top" alt="@product.Nome" style="height: 150px; object-fit: contain;" />
                        </a>
                        <div class="card-body p-3">
                            <a asp-controller="Dettaglio" asp-action="Index" asp-route-id="@product.IdProdotto" class="card-title h6 fw-bold mb-1 custom-card-detail text-dark">@product.Nome</a>
                            <a asp-controller="Dettaglio" asp-action="Index" asp-route-id="@product.IdProdotto">
                                <p class="card-text fw-bold mb-2" style="color: #1B3A2A;">€ @product.Prezzo.ToString("N2")</p>
                            </a>
                        </div>
                        <form asp-controller="Carrello" asp-action="AggiungiAlCarrello" method="post" asp-route-id="@product.IdProdotto" asp-route-number="1">
                            <input type="hidden" name="idProdotto" value="@product.IdProdotto" />
                            <button type="submit" class="btn BtnCustomHome CategoryBtn btn-sm w-100">Acquista Ora</button>
                        </form>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
