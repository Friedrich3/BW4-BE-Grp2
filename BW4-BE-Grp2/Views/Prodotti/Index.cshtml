@model List<Prodotto>

@{
    ViewData["Title"] = "EpiTech - Prodotti";
    List<Categoria> Categorie = ViewBag.Categorie;
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb fw-bold">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" class="text-primary opacity-75">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Prodotti</li>
    </ol>
</nav>

<div class="container py-4">
    <h2 class="fw-bold text-center mb-4">I Nostri Prodotti</h2>
    <p class="text-center opacity-75 mb-5">Tutti i prodotti di alta qualità al miglior prezzo. Elettronica ricondizionata con un minimo di 12 mesi di garanzia.</p>

    <h4 class="mb-3">Le nostre Categorie</h4>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mb-5">
        @foreach (var item in Categorie)
        {
            <div class="col d-flex justify-content-center">
                <div class="card h-100 shadow-sm border-0 rounded-3 w-auto">
                    <img src="@item.ImmagineCategoria" class="card-img-top mx-auto d-block mt-4" style="width: 60px; height: 60px; object-fit: cover;" alt="@item.NomeCategoria" />
                    <div class="card-body text-center">
                        <h5 class="card-title fw-bold text-dark">@item.NomeCategoria</h5>
                        <a asp-controller="Prodotti" asp-action="Category" asp-route-c="@item.IdCategoria" asp-route-cat="@item.NomeCategoria" class="btn btn-primary btn-sm mt-3 w-100">Scopri di più</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <hr />

    <div class="text-center mb-4">
        <h5 class="fw-bold">Prodotti Epitech con min. 12 mesi di garanzia</h5>
        <p>
            <svg aria-hidden="true" fill="none" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" style="width:30px" class="text-primary">
                <path d="M17.25 23.25a6 6 0 1 0 0-12 6 6 0 0 0 0 12z" stroke="#5984E7" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                <path d="m19.924 15.505-2.905 3.874a.75.75 0 0 1-1.131.08l-1.5-1.5" stroke="#5984E7" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                <path d="M8.25 18.75h-6a1.5 1.5 0 0 1-1.5-1.5V6.75a1.5 1.5 0 0 1 1.5-1.5h15a1.5 1.5 0 0 1 1.5 1.5v1.5" stroke="#4B5492" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
                <path d="m18.266 5.647-2.821-4.229A1.5 1.5 0 0 0 14.2.75H5.3a1.5 1.5 0 0 0-1.248.668L1.234 5.647M9.75.75v4.5" stroke="#4B5492" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path>
            </svg>
            <span class="fw-bold text-black">Spedizione inclusa</span>
        </p>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
        @* TODO inserire controlli NULL *@
        @foreach (var product in Model)
        {
            <div class="col">
                <div class="card h-100 border-0 shadow-lg rounded-3">
                    <a asp-controller="Dettaglio" asp-action="Index" asp-route-id="@product.IdProdotto">
                        <img src="@product.Immagine" class="card-img-top" alt="@product.Nome" style="height: 200px; object-fit: contain;" />
                    </a>
                    <div class="card-body p-4">
                        <a asp-controller="Dettaglio" asp-action="Index" asp-route-id="@product.IdProdotto" class="card-title h5 fw-bold text-dark mb-2 d-block">@product.Nome</a>
                        <p class="card-text fw-bold text-success mb-3">€ @product.Prezzo.ToString("N2")</p>
                        <form asp-controller="Carrello" asp-action="AggiungiAlCarrello" method="post" asp-route-id="@product.IdProdotto" asp-route-number="1">
                            <input type="hidden" name="idProdotto" value="@product.IdProdotto" />
                            <button type="submit" class="btn BtnCustomHome CategoryBtn btn-block btn-lg text-white fw-bold">Acquista Ora</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
