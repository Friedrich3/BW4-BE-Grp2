@model ProdottoDettaglioModel
@{

    ViewData["Title"] = "Dettaglio Prodotto - ";
}

<div class="row">
    <div class="col-lg-4 col-sm-5 mx-auto">
<div class="card" style="">
    <img class="card-img-top img-fluid"
          style="max-height:600px"
         src="@Model.Immagine"
         alt="Card image cap"
         id="mainProductImage">
</div>
</div>
    <div class="col-lg-4 col-sm-5 mx-auto">
        <div class="card" style="width: 30rem;">
            <div class="card-body" id="@Model.productId">
                <h4 class="h4">
                        @Model.Nome
                </h4>
               <small class="text-secondary fw-bold">@Model.Brand</small>
               <br />
                <p class="card-text fw-bold mb-2 fs-4" style="color: #1B3A2A;">€ @Model.Prezzo</p>
                <p class="card-text">
                        <strong>Descrizione :</strong> @Model.Descrizione
                </p>
                  <div class="row">
                      <form method="post" asp-controller="Dettaglio" asp-action="AddOrder" asp-route-id="@Model.productId" asp-route-number="@Model.Quantita">
                        <div class="col-12 row g-3 align-items-center">
                            <div class="col-auto">
                                <label for="Quantita" class="col-form-label fw-bolder">Quantita' :</label>
                            </div>
                            <div class="col-auto">
                                <input type="number" asp-for="@Model.Quantita" id="Quantita" class="form-control" required>
                            </div>
                       </div>
                       <div class="col-12">
                             <button type="submit" class="btn detail-button-color w-100 my-2 py-3">Aggiungi al Carrello</button>
                       </div>
                      </form>
                </div>
                <h2 class="h2 text-center">
                    Altre Immagini
                </h2>
                  <div class="row">
                    <img src="@Model.Immagine"
                         style="object-fit:contain; height:80px"
                         class="rounded-2 col-3 carouselImage"
                         alt="prodotto">

                    <img src="@Model.ImmagineAlt"
                         style="object-fit:contain; height:80px"
                         class="rounded-2 col-3 carouselImage"
                         alt="prodotto">
                    
                  </div>
            </div>
        </div>
</div>
</div>
<script src="~/js/DettaglioImmagine.js"></script>





