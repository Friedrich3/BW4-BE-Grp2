@model List<Prodotto>

@{
    ViewData["Title"] = "Gestione Prodotti";
}

<div class="container mt-4">
    <h1 class="text-center">Gestione dei Prodotti</h1>

    <div class="d-flex justify-content-start mb-3">
        <a href="@Url.Action("Create", "Admin")" class="btn btn-success">
           Aggiungi Prodotto
        </a>
    </div>

    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>Immagine</th>
                <th>Nome</th>
                <th>Brand</th>
                <th>Prezzo</th>
                <th class="text-center">Azioni</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var prodotto in Model)
            {
                <tr>
                    <td>
                        <img src="@prodotto.Immagine" alt="Immagine prodotto" width="50" height="50" class="rounded">
                    </td>
                    <td>@prodotto.Nome</td>
                    <td>@prodotto.Brand</td>
                    <td>@prodotto.Prezzo.ToString("C")</td>
                    <td class="text-center">

                        <a href="@Url.Action("Edit", "Admin", new { id = prodotto.IdProdotto })" class="btn btn-warning btn-sm">
                            Modifica
                        </a>

                        <a href="@Url.Action("Delete", "Admin", new { id = prodotto.IdProdotto })" class="btn btn-danger btn-sm" onclick="return confirm('Sei sicuro di voler eliminare questo prodotto?');">
                            Elimina
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
