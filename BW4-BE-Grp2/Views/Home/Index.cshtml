<h1 class="text-center my-3" style="font-weight: 700; color: #1B3A2A;">Benvenuti su EpiTech</h1>
<p class="text-center mb-3" style="font-size: 1.2rem; color: #555;">La tua destinazione per tecnologia ricondizionata di alta qualità</p>

<!-- Categories Section -->
<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="d-flex flex-wrap justify-content-center gap-2">
                @{
                    var firstSixCategories = categoryImages.Take(6).ToList();
                    var remainingCategories = categoryImages.Skip(6).ToList();
                }

                @foreach (var category in firstSixCategories)
                {
                    <button class="btn btn-outline-secondary CategoryBtn BtnCustomHome" style="width: 120px; height: 120px;">
                    <img src="@category.Value" alt="@category.Key" style="width: 60px; height: 60px; object-fit: contain;">
                    <div class="mt-2 small">@category.Key</div>
                </button>
                }

                <div class="dropdown">
                    <button class="btn btn-outline-secondary CategoryBtn BtnCustomHome dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false" style="width: 120px; height: 120px;">
                        <div>Altro</div>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        @foreach (var category in remainingCategories)
                        {
                        <li>
                            <a class="dropdown-item" href="#">
                                <img src="@category.Value" alt="@category.Key" style="width: 30px; height: 30px; object-fit: contain;">
                                <span class="ms-2">@category.Key</span>
                            </a>
                        </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .CategoryBtn {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        padding: 10px;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .CategoryBtn:hover {
            transform: translateY(-5px);
        }
</style>

